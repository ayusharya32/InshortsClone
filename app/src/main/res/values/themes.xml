<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QuickNews" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.QuickNews" parent="Base.Theme.QuickNews" />

    <style name="Theme.QuickNews.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_inset</item>
        <item name="windowSplashScreenBackground">@color/teal_900</item>
        <item name="windowSplashScreenAnimationDuration">2000</item>
        <item name="postSplashScreenTheme">@style/Theme.QuickNews</item>
    </style>

    <style name="CustomFilterChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_bg_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="chipMinHeight">40dp</item>
    </style>

    <style name="ScreenBackground1">
        <item name="android:background">@color/teal_900</item>
    </style>

    <style name="ScreenBackground2">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ScreenBackground3">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="ScreenTextColor1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ScreenTextColor2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScreenTextColor3">
        <item name="android:textColor">@color/teal_900</item>
        <item name="drawableTint">@color/teal_900</item>
    </style>

    <style name="ScreenTextColor4">
        <item name="android:textColor">@color/dark_grey_300</item>
        <item name="drawableTint">@color/dark_grey_300</item>
    </style>

    <style name="ScreenTextColor5">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="drawableTint">@color/dark_grey</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorSecondary">@color/dark_grey</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>